@model IEnumerable<StoreDB.Model.ViewModel.BackcottonCats.MenuTreeRootStratumViewModel>
@{
    ViewBag.Title = "SideBarContent";
    Layout = "";
} 
<div id="sidebar-nav" class="sidebar">
    <div class="sidebar-scroll">
        <ul class="nav">
            @foreach (var items in Model)
            {
                if (items.tree.Count == 1)
                {
                    <li>
                        <a href="@items.ControllerName/@items.ActionName">
                            @*class="active"*@
                            <i class="@items.UrlIcon"></i>
                            <span>@items.TRootName</span>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="#@items.TRootID" data-toggle="collapse">
                            @*class="collapsed"*@
                            <i class="@items.UrlIcon"></i>
                            <span>@items.TRootName</span>
                            <i class="icon-submenu lnr lnr-chevron-left"></i>
                        </a>
                        <div id="@items.TRootID" class="collapse">
                            <ul class="nav">
                                @foreach (var son in items.tree)
                                {
                                    <li>
                                        <a href="@Url.Action(son.ActionName,son.ControllerName)" class="elements"> <span>@son.MenuName</span> </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>

                }
            } 
        </ul>
    </div>
</div>

