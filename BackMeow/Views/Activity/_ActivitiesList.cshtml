@using StoreDB.Enum;
@model PagedList.IPagedList<BackMeow.Models.ViewModel.ActitiesListContentViewModel>

<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TitleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().HtmlContext)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().STime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().ETime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TitleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HtmlContext)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ETime)
            </td>
            <td style="width:18%">
                <button type="button" name="Detail" class="btn btn-primary btn-toastr"
                        onclick="PackageEvent('@item.ActitiesID',false);">
                    明細
                </button>
                <button type="button" class="btn btn-danger">刪除</button>
            </td>
        </tr>
    }
</table>